{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@components": [
        "src/components"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@pages": [
        "src/pages"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@layouts": [
        "src/layouts"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@stores/*": [
        "src/stores/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@routes": [
        "src/routes"
      ],
      "@customTypes/*": [
        "src/types/*"
      ],
      "@customTypes": [
        "src/types"
      ],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
